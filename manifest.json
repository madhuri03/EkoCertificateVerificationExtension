{
  "name": "Eko certificate verification",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Screen capture your current page in entirety and reliably!",
  "omnibox": { "keyword" : "nt" },
  "browser_action": {
    "default_icon": "eko-icon.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+E"
      }
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["tabs", "activeTab", "storage", "unlimitedStorage", "contextMenus", "https://*.blupig.net/", "http://localhost:3000/"],
  "icons": {
    "16": "eko-icon.png",
    "48": "eko-icon.png",
    "128": "eko-icon.png"
  }
}
